@model ado.net_project.model.Employee


<div class="container mt-4 mb-5">
    <div class="card shadow-none">
        <div class="card-header">
            <h4 class="text-secondary">Edit Employee</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditEmployee" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-2">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Position" class="form-label">Position</label>
                    <input asp-for="Position" class="form-control" placeholder="Enter Position" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Age" class="form-label">Age</label>
                    <input asp-for="Age" class="form-control" type="number" placeholder="Enter Age" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter Email" />
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>  